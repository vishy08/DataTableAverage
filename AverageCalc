
rows, cols = (20, 7)
arr = [[0 for i in range(cols)] for j in range(rows)]

for i in range(0, 20):

    for j in range(0, 7):
        #print(i*j, end=' ')
        arr[i][j] = i*j

#print(arr)

def avgFunction(m, arr=[i][j]):
    #total
    insCnt = []
    insCntI = 0

    #avg
    avgIns = []
    avgInsI = 0

    #total
    totalPts = []
    totalPtsI = 0

    #avg
    avgPtsDay = []
    avgPtsDayI = 0

    #total
    numSteps = []
    numStepsI = 0

    #avg
    avgSteps = []
    avgStepsI = 0

    #total
    workingDays = []
    workingDaysI = 0

    for i in range(0, 20):

        for j in range(0, 7):
            if j == 0:
                print(m)
                insCnt[i] = m
            elif j == 1:
                avgIns[i] = m
            elif j == 2:
                totalPts[i] = m
            elif j == 3:
                avgPtsDay[i] = m
            elif j == 4:
                numSteps[i] = m
            elif j == 5:
                avgSteps[i] = m
            elif j == 6:
                workingDays[i] = m
            else:
                print("error")

    for a in range(0, 20):
        insCntI = insCntI + insCnt[a]

    for b in range(0, 20):
        avgInsI = avgInsI + avgIns[b]
    
    for c in range(0, 20):
        totalPtsI = totalPtsI + totalPts[c]

    for d in range(0, 20):
        avgPtsDayI = avgPtsDayI + avgPtsDay[d]

    for e in range(0, 20):
        numStepsI = numStepsI +  numSteps[e]

    for f in range(0, 20):
        avgStepsI = avgStepsI + avgSteps[f]
    
    for g in range(0, 20):
        workingDaysI = workingDaysI + workingDays[g]

    avgInsI = avgInsI / 20
    avgPtsDayI = avgPtsDayI / 20
    avgStepsI = avgStepsI / 20

    subtotal = [insCntI, avgInsI, totalPtsI, avgPtsDayI, numStepsI, avgStepsI, workingDaysI]
    print(insCntI)
    return subtotal

avgFunction(arr)
            


