
rows, cols = (20, 7)
arr = [[0 for i in range(cols)] for j in range(rows)]

for i in range(0, 20):

    for j in range(0, 7):
        #print(i*j, end=' ')
        arr[i][j] = i*j

#print(arr)

def avgFunction(array):
    #total
    insCntI = 0

    #avg
    avgInsI = 0

    #total
    totalPtsI = 0

    #avg
    avgPtsDayI = 0

    #total
    numStepsI = 0

    #avg
    avgStepsI = 0

    #total
    workingDaysI = 0

    for i in range(len(array)):

        for j in range(len(array[i])):
            if j == 0:
                insCntI = insCntI + array[i][j]
            elif j == 1:
                avgInsI = avgInsI + array[i][j]
            elif j == 2:
                totalPtsI = totalPtsI + array[i][j]
            elif j == 3:
                avgPtsDayI = avgPtsDayI + array[i][j]
            elif j == 4:
                numStepsI = numStepsI + array[i][j]
            elif j == 5:
                avgStepsI = avgStepsI + array[i][j]
            elif j == 6:
                workingDaysI = workingDaysI + array[i][j]
            else:
                print("error")

    #for a in range(0, 20):
    #    insCntI = insCntI + insCnt[a]

    #for b in range(0, 20):
    #    avgInsI = avgInsI + avgIns[b]
    
    #for c in range(0, 20):
    #    totalPtsI = totalPtsI + totalPts[c]

    #for d in range(0, 20):
    #    avgPtsDayI = avgPtsDayI + avgPtsDay[d]

    #for e in range(0, 20):
    #    numStepsI = numStepsI +  numSteps[e]

    #for f in range(0, 20):
    #    avgStepsI = avgStepsI + avgSteps[f]
    
    #for g in range(0, 20):
    #    workingDaysI = workingDaysI + workingDays[g]

    avgInsI = avgInsI / len(array)
    avgPtsDayI = avgPtsDayI / len(array)
    avgStepsI = avgStepsI / len(array)

    subtotal = [insCntI, avgInsI, totalPtsI, avgPtsDayI, numStepsI, avgStepsI, workingDaysI]
    print(subtotal)
    return subtotal

avgFunction(arr)
            


